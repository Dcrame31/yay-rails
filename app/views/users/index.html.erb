<%= flash_message %>

<% if name = session[:name] %>

  <h1>Welcome <%= name -%>!!! </h1> 

    <ol>
        <%= category_empty? %>
        <% @user.categories.each do |category| %>
            <li> 
                <%= category.name %>
            </li>
        <% end %>
    </ol>

    <p><%= button_to 'Create Category', new_category_path %></p>

    <p><%= link_to 'Log out', logout_path, method: :delete %></p>
<% else %>
<h1> Please <%= link_to 'sign up', signup_path %> or <%= link_to 'log in', login_path %> </h1>
<% end %>