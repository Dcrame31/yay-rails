<%= form_for @item do |f| %>
<%# <input type="text" name="item[name]" id="item_name">
<input type="text" name="item[price]" id="item_price">
<input type="hidden" name="item[list_id]" id="item_list_id"> %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :qty %>
<%= f.number_field :qty, :step => 0.01 %>
<%= f.label :price %>
<%= f.number_field :price %> 
<%= f.hidden_field :list_id, :value => @list.id %>
<%= f.submit 'Add Item' %><br>
<% end %>