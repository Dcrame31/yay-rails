<h1>Create a new category</h1>
<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.fields_for :categories, @user.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %><br>
    <% end %>
<%= f.hidden_field :user_id, :value => @user.id %>
<%= f.submit 'Create Category' %><br>
<% end %>

