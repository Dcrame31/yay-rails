<p>Create a new list</p>
<%= form_for @list do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :description %><br>
<%= f.text_area :description %><br>
<%= f.label :items %><br>
<%= f.fields_for :item, @list.items.build do |items| %>
    <%= items.text_field :name %><br>
    <% end %>
<%= f.label :budget %><br>
<%= f.number_field :budget %><br>
<%= f.label :category %><br>
<%= f.collection_select :category_ids, @user.categories.all, :id, :name, include_blank: true%><br>
<%= f.label 'New Category'%><br>
<%= f.fields_for :list, @list.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %><br>
  <% end %>
<%= f.hidden_field :user_id, :value => @user.id %>
<%= f.submit 'Create List' %>
<% end %>